{
  "name": "tracemap-api",
  "version": "1.0.0",
  "private": true,
  "description": "Koa Server serving the api for tracemap",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENV=development ts-node ./src/index.ts",
    "prebuild": "rm -rf dist",
    "build": "npx esbuild ./src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=./dist/index.js",
    "postbuild": "cd dist && zip -r index.zip index.js",
    "update-lambda": "aws lambda update-function-code --function-name tracemap-api --zip-file fileb://dist/index.zip",
    "tsc": "tsc"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.289.0",
    "@aws-sdk/client-kms": "^3.289.0",
    "@aws-sdk/lib-dynamodb": "^3.289.0",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@koa/cors": "5.0.0",
    "@koa/router": "12.0.1",
    "axios": "^1.6.3",
    "koa": "2.15.0",
    "koa-bodyparser": "4.4.1",
    "masto": "6.5.2",
    "serverless-http": "3.2.0",
    "ts-node": "10.9.2"
  }
}
