{
  "name": "tracemap",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "tracemap-frontend",
    "tracemap-api"
  ],
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "prettier": "2.8.3"
  },
  "scripts": {
    "start": "aws-vault exec private -- concurrently --kill-others \"npm run start --workspace tracemap-frontend\" \"npm run start --workspace tracemap-api\"",
    "tsc": "npm run tsc --workspaces",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "volta": {
    "node": "18.12.1"
  }
}
